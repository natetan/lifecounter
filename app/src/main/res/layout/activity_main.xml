  <Button
    android:text="+5"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/player2Plus5"
    android:layout_alignBaseline="@+id/player2Plus"
    android:layout_alignBottom="@+id/player2Plus"
    android:layout_toRightOf="@+id/player2Plus"
    android:layout_toEndOf="@+id/player2Plus"/>

  <TextView
    android:text="Player 2:"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="35dp"
    android:id="@+id/player2textView"
    android:layout_below="@+id/player1textView"
    android:layout_alignLeft="@+id/player1textView"

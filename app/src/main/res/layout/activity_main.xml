    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/player1Minus"
    android:layout_above="@+id/player2textView"
    android:layout_toLeftOf="@+id/player2textView"
    android:layout_toStartOf="@+id/player2textView"/>


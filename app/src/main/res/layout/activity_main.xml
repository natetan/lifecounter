    android:layout_alignBaseline="@+id/player3Minus"
    android:layout_alignBottom="@+id/player3Minus"
    android:layout_toLeftOf="@+id/player3Minus"
    android:layout_toStartOf="@+id/player3Minus"/>

  <Button
    android:text="-5"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/player4Minus5"
    android:layout_alignBaseline="@+id/player4Minus"
    android:layout_alignBottom="@+id/player4Minus"
    android:layout_toLeftOf="@+id/player4Minus"
    android:layout_toStartOf="@+id/player4Minus"/>

  <Button
    android:text="-"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/player2Minus"
    android:layout_alignTop="@+id/player2textView"
    android:layout_toLeftOf="@+id/player2textView"
    android:layout_toStartOf="@+id/player2textView"/>

  <Button
    android:text="+5"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/player3Plus5"
